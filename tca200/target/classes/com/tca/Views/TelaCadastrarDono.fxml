<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="320" prefWidth="400" style="-fx-background-color: #E8F5E9;" 
             xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tca.Controllers.DonoController">
    
    <!-- Título -->
    <Label layoutX="140" layoutY="20" style="-fx-font-size: 18px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;" text="Cadastrar Dono" />

    <!-- Caixa de entrada de dados -->
    <VBox layoutX="50" layoutY="60" prefWidth="300" spacing="10">
        <TextField fx:id="txtNome" promptText="Nome do Dono"/>
        <TextField fx:id="txtTelefone" promptText="Telefone"/>
        <TextField fx:id="txtEmail" promptText="E-mail"/>
    </VBox>

    <!-- Botões alinhados horizontalmente -->
    <HBox layoutX="100" layoutY="230" spacing="20">
        <Button fx:id="btnSalvar" text="Salvar" onAction="#salvarDono"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="btnCancelar" text="Cancelar" onAction="#cancelar"
                style="-fx-background-color: #D32F2F; -fx-text-fill: white;"/>
    </HBox>

</AnchorPane>