<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400" prefWidth="400" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tca.Controllers.PetController">
    
    <Label layoutX="120" layoutY="20" style="-fx-font-size: 18px; -fx-text-fill: #2E7D32; -fx-font-weight: bold;" text="Cadastrar Pet" />
    
    <TextField fx:id="txtNomePet" layoutX="50" layoutY="70" prefWidth="300" promptText="Nome do Pet" />
    <TextField fx:id="txtRaca" layoutX="50" layoutY="120" prefWidth="300" promptText="Raça" />
    <TextField fx:id="txtTipo" layoutX="50" layoutY="170" prefWidth="300" promptText="Tipo" />
    <TextField fx:id="txtIdade" layoutX="50" layoutY="220" prefWidth="300" promptText="Idade" />
    
    <Button fx:id="btnSalvar" layoutX="150" layoutY="330" prefHeight="40" prefWidth="100" text="Salvar" onAction="#salvarPet" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
    
    <Label layoutX="50" layoutY="270" text="Sexo:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />

    <Button fx:id="btnMacho" layoutX="120" layoutY="270" text="Macho" onAction="#selecionarMacho" style="-fx-background-color: #D3D3D3; -fx-text-fill: black; -fx-font-weight: bold;" />
    <Button fx:id="btnFemea" layoutX="200" layoutY="270" text="Fêmea" onAction="#selecionarFemea" style="-fx-background-color: #D3D3D3; -fx-text-fill: black; -fx-font-weight: bold;" />
</AnchorPane>
